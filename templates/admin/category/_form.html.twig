<div class="content register">

    {% if category.title %}
        <h2 class="big-title">{{ category.title }}</h2>
    {% else %}
        <h2 class="big-title">Nouvelle cat√©gorie</h2>
    {% endif %}

    <div class="form">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="input-data">
                {{ form_widget(form.title) }}
                {{ form_label(form.title) }}
                {{ form_errors(form.title) }}
                <div class="underline">
                </div>
            </div>
            <div class="input-data">
                {{ form_widget(form.imageFile) }}
                {{ form_label(form.imageFile) }}
                {{ form_errors(form.imageFile) }}
                <div class="underline">
                </div>
            </div>
        </div>
        <div class="form-row mb-0">
            <div class="input-data-btn field">
                <input type="submit" class="clean-button" VALUE="{{ button|default('Enregistrer') }}"/>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>






