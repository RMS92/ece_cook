{% if  event.pictures is empty %}
    <img src="{{ 'images/image.jpg' }}" alt="card-img-top"
         style="width: 100%; height: auto;">
{% else %}
    {% for picture in event.pictures %}
        {% if loop.first %}
            <a href="{{ path('event.show', {slug: event.slug, id: event.id}) }}"><img
                        src="{{ vich_uploader_asset(picture, 'imageFile') }}"
                        alt="card-img-top" style="width: 100%; height: auto;"></a>
        {% endif %}
    {% endfor %}
{% endif %}

<a href="{{ path('event.show', {slug: event.slug, id: event.id}) }}">
    <h3 class="entry-title mt-30 has-line"><a href="#">{{ event.title }}</a>
    </h3></a>
<div class="entry-summary">
    <p class="mt-0">{{ event.caption }}</p>
    <a class="more-link" href="{{ path('event.show', {slug: event.slug, id: event.id}) }}">Read more</a>
</div>
<span class="grid-sep"></span>

