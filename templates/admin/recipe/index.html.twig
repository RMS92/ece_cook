{% extends 'base.html.twig' %}

{% block title '' %}

{% block body %}
    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="sidebar-flex">
            <div class="aside-left pr-30-995">
                <a href="{{ path('admin.recipe.new') }}" class="more-link">Créer</a>
                <div class="grid-event">
                    {% for recipe in recipes %}
                        <div class="block-event flex-none">
                            {% if  recipe.pictures is empty %}
                                <img src="{{ 'images/smachno_07.jpg' }}" alt="card-img-top"
                                     style="width: 100%; height: auto;">
                            {% else %}
                                {% for picture in recipe.pictures %}
                                    {% if loop.first %}
                                        <a href="{{ path('recipe.show', {slug: recipe.slug, id: recipe.id}) }}"><img
                                                    src="{{ vich_uploader_asset(picture, 'imageFile') }}"
                                                    alt="card-img-top" style="width: 100%; height: auto;"></a>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}

                            <h3 class="entry-title mt-30"><a href="#">{{ recipe.title }}</a>
                            </h3>
                            <div class="entry-summary">
                                <p></p>
                            </div>
                            <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}" class="more-link">Editer</a>

                            <form method="POST" action="{{ path('admin.recipe.delete', {id: recipe.id}) }}"
                                  style="display: inline-block"
                                  onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer cette recette ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                                <button class="more-link">Supprimer</button>
                            </form>
                            <span class="grid-sep"></span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="aside-right pl-30">
                <aside class="aside">
                    <div class="infos-main widget_recent_entries border-top-main b-0">
                        <a href="{{ path('admin.dashboard') }}"><h4 class="widget-title">Dashboard</h4></a>
                        <ul>
                            <li><a href="{{ path('admin.user.index') }}"
                                   class="{% if current_sub_menu is defined and current_sub_menu == 'admin_user' %}active-dashboard{% endif %}">Users</a>
                            </li>
                            <li><a href="{{ path('admin.category.index') }}"
                                   class="{% if current_sub_menu is defined and current_sub_menu == 'admin_category' %}active-dashboard{% endif %}">Categories</a>
                            </li>
                            <li><a href="{{ path('admin.recipe.index') }}"
                                   class="{% if current_sub_menu is defined and current_sub_menu == 'admin_recipe' %}active-dashboard{% endif %}">Recipes</a>
                            </li>
                            <li><a href="{{ path('admin.event.index') }}"
                                   class="{% if current_sub_menu is defined and current_sub_menu == 'admin_event' %}active-dashboard{% endif %}">Events</a>
                            </li>
                            <li><a href="{{ path('admin.article.index') }}"
                                   class="{% if current_sub_menu is defined and current_sub_menu == 'admin_article' %}active-dashboard{% endif %}">Articles</a>
                            </li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>
{% endblock %}