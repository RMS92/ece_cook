{% if  event.pictures is empty %}
    <a href="{{ path('event.show', { slug: event.slug, id: event.id}) }}">
        <img src="{{ 'images/smachno_07.jpg' | imagine_filter('event_index') }}" alt="card-img-top"
            style="width: 100%; height: auto;"></a>
{% else %}
    {% for picture in event.pictures %}
        {% if loop.first %}
            <a href="{{ path('event.show', {slug: event.slug, id: event.id}) }}"><img
                        src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('event_index') }}"
                        alt="card-img-top" style="width: 100%; height: auto;"></a>
        {% endif %}
    {% endfor %}
{% endif %}

<h3 class="entry-title mt-30 has-line-auto"><a
            href="{{ path('event.show', {slug: event.slug, id: event.id}) }}">{{ event.title }}</a>
</h3>
<div class="entry-summary">
    <p class="mt-0">{{ event.formattedCaption }}</p>
    <a class="more-link" href="{{ path('event.show', {slug: event.slug, id: event.id}) }}">Read more</a>
</div>
<span class="grid-sep"></span>

